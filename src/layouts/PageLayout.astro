---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogUrl?: string;
  class?: string;
}

const { title, description, ogImage, ogUrl, class: className } = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage} ogUrl={ogUrl}>
  <div class="flex flex-col items-center">
    <div class:list={["flex flex-col w-full sm:w-2xl md:w-3xl px-6 pt-18 pb-32 max-sm:pt-4", className]}>
      <slot />
    </div>
  </div>
</BaseLayout>
