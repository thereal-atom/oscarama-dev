---
interface Props {
  logoSrc?: string;
  logoAlt?: string;
}

const { logoSrc = "/oscarama.png", logoAlt = "oscarama" } = Astro.props;

const socialLinks = [
  { href: "https://github.com/thereal-atom", icon: "/socials/github.svg", label: "GitHub" },
  {
    href: "https://linkedin.com/in/oscarfalemara",
    icon: "/socials/linkedin.svg",
    label: "LinkedIn",
  },
  { href: "https://x.com/oscarfalll", icon: "/socials/x.svg", label: "X" },
  // { href: "mailto:hello@oscarama.dev", icon: "/socials/email.svg", label: "Email" },
];
---

<header class="sticky top-0 z-50">
  <div class="flex justify-center pb-4">
    <div
      class="relative flex items-center justify-between w-full sm:w-2xl md:w-3xl px-6 pt-8 pb-4 bg-[#101010]"
    >
      <div
        class="pointer-events-none absolute inset-0"
        style="background-size: 64px; background-repeat: repeat; background-image: url('/background-texture.png'); opacity: 0.06;"
      >
      </div>
      <a href="/" class="relative flex items-center gap-2 hover:opacity-80 transition-opacity">
        <img src={logoSrc} alt={logoAlt} class="h-8 w-8 rounded-sm" />
      </a>
      <nav class="relative flex items-center gap-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-70 transition-opacity duration-200"
            >
              <img src={link.icon} alt={link.label} class="h-5 w-auto" />
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
