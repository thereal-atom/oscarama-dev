---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  name: string;
  slug: string;
  logo: ImageMetadata;
  description: string;
}

const { name, slug, logo, description } = Astro.props;
---

<a
  href={`/events/${slug}`}
  class="group flex flex-row gap-4 p-4 border border-white/20 hover:border-white/40 transition-colors rounded-sm"
  onclick={`window.posthog?.capture('event_series_clicked', { series: '${slug}', name: '${name}' })`}
>
  <Image src={logo} alt={name} class="w-16 h-16 rounded-sm object-contain" />
  <div class="flex flex-col">
    <h2 class="text-lg font-semibold group-hover:text-[#E56717] transition-colors">
      {name}
    </h2>
    <p class="text-sm text-white/70 mt-1">{description}</p>
  </div>
</a>
