---
/**
 * @deprecated Use BaseLayout or PageLayout instead.
 * - BaseLayout: For custom page structures (no content wrapper)
 * - PageLayout: For standard content pages with centered layout
 */
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogUrl?: string;
}

const { title, description, ogImage, ogUrl } = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage} ogUrl={ogUrl}>
  <slot />
</BaseLayout>
